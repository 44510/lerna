{
  "name": "commands-info",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/commands/info",
  "projectType": "application",
  "targets": {
    "build": {
      "dependsOn": ["compile"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/commands/info/dist",
        "parallel": false,
        "commands": ["rm -rf package.json"]
      }
    },
    "compile": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/commands/info/dist",
        "main": "packages/commands/info/src/index.ts",
        "tsConfig": "packages/commands/info/tsconfig.lib.json",
        "assets": [],
        "thirdParty": false,
        "platform": "node",
        "format": ["cjs"],
        "additionalEntryPoints": ["packages/commands/info/src/command.ts"],
        "esbuildOptions": {
          "external": ["*package.json"],
          "outExtension": { ".js": ".js" }
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/commands/info/**/*.ts"]
      }
    }
  },
  "tags": []
}
